<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app"
    android:layoutDirection="ltr"
    tools:context=".Activities.PermActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Location Permission"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:letterSpacing="0"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/_120sdp"/>


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:letterSpacing="0"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guide1"
        android:text="This app needs your location permission to find TV"
        android:textColor="#ffffff"
        android:textSize="@dimen/_12sdp" />


    <Button
        android:id="@+id/btn_perm"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@+id/guide1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Allow Permission"
        android:textAllCaps="false"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:background="@drawable/permission_button"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/app"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36"/>



</androidx.constraintlayout.widget.ConstraintLayout>