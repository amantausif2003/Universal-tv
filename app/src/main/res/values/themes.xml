<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UniversalTVRemote" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app</item>
        <item name="colorPrimaryDark">@color/app</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="image_layout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photo_select</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_shp</item>
        <item name="colorControlNormal">@color/app</item>
        <item name="colorControlActivated">@color/app</item>
        <item name="colorControlHighlight">@color/app</item>
    </style>

    <style name="BannerAdsView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">#303030</item>
        <item name="colorControlActivated">#303030</item>
        <item name="colorControlHighlight">@color/app</item>
    </style>

</resources>